<div class="secondcolumn">
	<div class="modules">
	   <label class="admin">Login</label>
	</div>
</div>


<div class="login">
    <form name="login" action="{{ Url.build('/login') }}" method="post" name="loginForm" id="loginForm" class="cmxform">
    <fieldset>
        <input type="hidden" name="URLOK" value="" id="loginURLOK" />
        <label class="block" id="luserid" for="userid">Username</label>
        <input class="big" tabindex="1" type="text" name="username" id="userid" class="required:true" title="Username is required"/>
        <label class="block" id="lpasswd" for="passwd">Password</label>
        <input class="big" tabindex="2" type="password" name="password" id="passwd" class="required:true" title="Password is required"/>

        <input class="bemaincommands" tabindex="2" type="submit" value="Enter"/>
    </fieldset>
    </form>

	{# <label class="block"><a href='javascript:void(0)' onClick="$('#pswforget').toggle('fast')">{t}Forgot your username or password?{/t}</a></label>

