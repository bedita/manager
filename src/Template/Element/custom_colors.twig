<style type="text/css">

    {# set modules colors #}
    {% for name, color in config('Modules.colors', []) %}

        .has-background-module-{{ name }} {
            background-color: {{ color }} !important;
        }

        .has-border-module-{{ name }} {
            border-color:  {{ color }} !important;
        }

        .has-text-module-{{ name }} {
            color:  {{ color }} !important;
        }

    {% endfor %}

    {# override alert message color if in config #}
    {% if config('AlertMessage.color') %}
        body[alert-message]:after {
            background-color: {{ config('AlertMessage.color') }};
        }
    {% endif %}

</style>
