<div class="input">
    <label for="">{{__('Left types') }}</label>
    {% for left in left_object_types|default([])|sort %}
        <a class="tag has-background-module-{{ left }}"
            href="{{ Url.build({'_name': 'model:view:object_types', 'id': left}) }}">
            {{ left }}
        </a>
    {% endfor %}
</div>

<div class="input">
    <label for="change_left">{{ __('Change left types') }}</label>
    <div>
        {{ Form.text('change_left', {
                'placeholder': 'comma separated list of types',
                'class': 'input',
                'value': left_object_types|default([])|join(','),
        })|raw }}
    </div>
</div>

{{ Form.hidden('current_left', {'value': left_object_types|default([])|join(',')})|raw }}

