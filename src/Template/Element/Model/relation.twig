<div class="input">
    <label for="">{{__('Left types') }}</label>
    {% for left in left_object_types|sort %}
        <a class="tag has-background-module-{{ left }}"
            href="{{ Url.build({'_name': 'model:view:object_types', 'id': left}) }}">
            {{ left }}
        </a>
    {% endfor %}
</div>

<div class="input">
    <label for="">{{__('Right types') }}</label>
    {% for right in right_object_types|sort %}
        <a class="tag has-background-module-{{ right }}"
            href="{{ Url.build({'_name': 'model:view:object_types', 'id': right}) }}">
            {{ right }}
        </a>
    {% endfor %}
</div>
