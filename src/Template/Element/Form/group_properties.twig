
    {# Lookup in properties configuration if a custom element `_element` key is set.
       Then load custom element or use Schema helper to display properties #}
    {% set k = 'Properties.' ~ currentModule.name ~ '.view.' ~ group ~ '._element' %}
    {% set customElement = config(k) %}

    {% if customElement %}
        {% element customElement {'properties' : properties} %}
    {% else %}

        {% for key, value in properties %}

            {{ Property.view(key, value, schema.properties[key])|raw }}

        {% endfor %}

    {% endif %}
