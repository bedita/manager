<date-ranges-list inline-template data-items={{ dateRanges|json_encode }}>
<ul id="date_ranges">
    <li v-for="(dateRange, index) in dateRanges" v-show="index == 0 || toggle">
        <label v-if="dateRange.end_date">{{ __('from') }}</label>
        <label v-if="!(dateRange.end_date)">{{ __('on') }}</label>
        <span><: format(dateRange.start_date) :></span>

        <label v-if="dateRange.end_date">{{ __('to') }}</label>
        <span v-if="dateRange.end_date"><: format(dateRange.start_date) :></span>

        <button v-show="dateRanges.length > 1 && index == 0 && !toggle" @click.prevent="toggle = !toggle">{{ __('+') }}</button>
        <button v-show="dateRanges.length > 1 && index == 0 && toggle" @click.prevent="toggle = !toggle">{{ __('-') }}</button>
    </li>
</ul>
</date-ranges-list>
