<div class="main-header">
    <nav class="modules-menu">
        <ul>
            <li class="menu-dashboard">
                {{ Html.link(__('Dashboard'), {'_name': 'dashboard'}, {'title': __('Dashboard')})|raw }}
            </li>

            {% for module in modules %}
            <li class="menu-module-color-{{ module.name }} {{ module.name == currentModule.name ? 'current' : '' }}">
                {{ Html.link(module.name|humanize, {'controller': 'Modules', 'action': 'index', 'object_type': module.name}, {'title': module.name|humanize})|raw }}
            </li>
            {% endfor %}
        </ul>
    </nav>

    {% if meta.pagination %}
    <nav class="page-toolbar">
        {% element 'Toolbar/pagination' %}
        {% element 'Toolbar/filters' %}
    </nav>
    {% endif %}
</div>
