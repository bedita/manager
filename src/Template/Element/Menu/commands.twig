<div class="commands-menu">
    {% if currentModule %}
        {{ Html.link(currentModule.name|humanize, {'controller': 'Modules', 'action': 'index', 'object_type': currentModule.name}, {'class': 'commands-menu__module commands-menu__module--#{currentModule.name}'})|raw }}
    {% else %}
        {{ Html.link(_view.request.params.controller|humanize, _view.request.params, {'class': 'commands-menu__module'})|raw }}
    {% endif %}

    {{ _view.fetch('commands') }}
</div>
