{% set items = relationSchema['right']|default([]) %}
{% set autoType = items|length == 1 ? items[0] : null %}
{% set map = Property.fastCreateFieldsMap() %}
{% set langs = config('Project.config.I18n.languages')|default([]) %}

<fast-create
    auto-type="{{ autoType }}"
    :fields-by-type="{{ map|json_encode }}"
    :items="{{ items|json_encode }}"
    :languages="{{ langs|json_encode|escape('html_attr') }}"
    :schemas-by-type="{{ schemasByType|json_encode }}"
    @created="appendRelations"
>
</fast-create>
